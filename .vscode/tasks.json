{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build"
      },
      "label": "rust: cargo build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "revealProblems": "onProblem",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "cargo",
      "command": "run",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "rust: cargo run",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "revealProblems": "never",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
        "env": {
          "RUST_BACKTRACE": "1"
        }
      }
    },
    {
      "type": "cargo",
      "command": "watch",
      "args": [
        "--clear",
        "--exec",
        // "lclippy -- -W clippy::pedantic -W clippy::nursery -W clippy::unwrap_used -W clippy::expect_used"
        "lclippy -- -W clippy::nursery -W clippy::unwrap_used -W clippy::expect_used"
      ],
    ],
    "problemMatcher": [
      "$rustc"
    ],
    "group": {
      "kind": "build"
    },
    "label": "rust: cargo clippy",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "revealProblems": "onProblem",
      "panel": "shared",
      "showReuseMessage": true,
      "clear": true
    }
  }
]
}